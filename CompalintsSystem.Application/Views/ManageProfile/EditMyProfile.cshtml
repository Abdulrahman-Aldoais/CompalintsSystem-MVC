@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager;
@inject SignInManager<ApplicationUser> signInManager;
@model  UserProfileEditVM

@{
    ViewData["Title"] = " البيانات الشخصة ";
}
@if (!ViewContext.ModelState.IsValid)
{
    <div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger"></div>
}




<div class="content-wrapper">

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="breadcrumb-wrapper py-3 mb-4">
            <span class="text-muted fw-light"></span> الملف الشخصي


        </h4>
        <ul class="nav nav-pills flex-column flex-md-row mb-3">
            <li class="nav-item">
                <a class="nav-link " asp-controller="ManageProfile" asp-action="Profile"><i class="bx bx-user me-1"></i> الملف الشخصي</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" asp-controller="ManageProfile" asp-action="EditMyProfile"><i class="bx bx-user me-1"></i> تعديل الملف الشخصي</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="ManageProfile" asp-action="ChangePassword"><i class="bx bx-lock-alt me-1"></i> تغير كلمة المرور</a>
            </li>

        </ul>
        <div class="row">

            <div class="container-xxl flex-grow-1 container-p-y">
                <div class="row invoice-add">
                    <!-- Invoice Add-->
                    <div class="col-12 col-lg-9 mb-4 mb-lg-0">
                        <div class="card invoice-preview-card">
                            <div class="card-body">
                                <div class="user-avatar-section">

                                    <h5 style="font-family:Cairo;font-size:18px" class="border-bottom pb-2 mb-4">البيانات</h5>
                                    <div class="info-container">
                                        <div class="info-container">
                                            @*<form asp-action="EditMyProfile" id="EditForm" method="post">*@
                                            <form asp-action="EditMyProfile" asp-controller="ManageProfile" method="post">
                                                <ul class="list-unstyled">
                                                    <li class="mb-3">
                                                        <span class="fw-bold me-2">اسم المستخدم:</span>

                                                        <div class="form-group">
                                                            <input type="text" asp-for="FullName" class="form-control" placeholder="" id="name" required>
                                                            <span asp-validation-for="FullName"></span>
                                                        </div>
                                                    </li>
                                                    <li class="mb-3">

                                                        <div class="form-group">
                                                            <span class="fw-bold me-2">تاريخ الميلاد:</span>
                                                            <input type="text" asp-for="DateOfBirth" class="form-control" placeholder="" id="name" required>
                                                            <span asp-validation-for="DateOfBirth"></span>
                                                        </div>
                                                    </li>
                                                    <li class="mb-3">
                                                        <span class="fw-bold me-2">رقم الهاتف:</span>
                                                        <div class="form-group">
                                                            <input type="text" asp-for="PhoneNumber" class="form-control" placeholder="" id="name" required>
                                                            <span asp-validation-for="PhoneNumber"></span>
                                                        </div>
                                                    </li>
                                                </ul>
                                                <button type="submit" onclick="location.href='@Url.Action("EditMyProfile", "ManageProfile")'" id="btnSave" class="btn btn-label-success d-grid w-100 mb-3">
                                                    <span class="d-flex justify-content-center align-items-center text-nowrap">
                                                        <i class=""></i>
                                                        حفظ التغير
                                                    </span>
                                                </button>
                                                <button onclick="location.href='@Url.Action("Profile", "ManageProfile")'" class="btn btn-danger d-grid w-100 mb-3">
                                                    <span class="d-flex justify-content-center align-items-center text-nowrap"><i class=""></i>خروج</span>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /Invoice Add-->
                        <!-- Invoice Actions -->
                        @*<div class="invoice-actions col-12 col-lg-3">
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <button onclick="location.href='@Url.Action("Index", "ManageProfile")'" class="btn btn-primary d-grid w-100 mb-3">
                                            <span class="d-flex justify-content-center align-items-center text-nowrap"><i class=""></i>خروج</span>
                                        </button>

                                    </div>
                                </div>

                            </div>*@
                        <!-- /Invoice Actions -->
                    </div>

                </div>
                <!-- / Content -->

                <div class="content-backdrop fade"></div>
            </div>

        </div>
    </div>
</div>
