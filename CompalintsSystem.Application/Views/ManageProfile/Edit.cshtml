@model EditUserViewModel
    @if (!ViewContext.ModelState.IsValid)
    {
    <div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger"></div>
    }
    <div class="content-wrapper">
        <!-- Content -->

        <div class="container-xxl flex-grow-1 container-p-y">
            <h4 class="breadcrumb-wrapper py-3 mb-4">
                <span class="text-muted fw-light">الملف الشخصي  /</span> الحساب
            </h4>

            <div class="row">
                <div class="col-md-12">
                    <ul class="nav nav-pills flex-column flex-md-row mb-3">
                        <li class="nav-item">
                            <a class="nav-link " asp-controller="ManageProfile" asp-action="Profile"><i class="bx bx-user me-1"></i> الملف الشخصي</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active " asp-controller="ManageProfile" asp-action="EditMyProfile"><i class="bx bx-user me-1"></i> تعديل الملف الشخصي</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="ManageProfile" asp-action="ChangePassword"><i class="bx bx-lock-alt me-1"></i> تغير كلمة المرور</a>
                        </li>

                    </ul>
                    <div class="card mb-4">
                        <h5 class="card-header">مدراء المحافظة</h5>
                        <!-- Account -->
                        <div class="card-body">
                            <div class="gap-4 d-flex align-items-start align-items-sm-center">
                                <img src="../../assets/img/avatars/1.png"
                                     alt="user-avatar"
                                     class="d-block rounded"
                                     height="100"
                                     width="100"
                                     id="uploadedAvatar" />
                                <div class="button-wrapper">
                                    <label for="upload" class="btn btn-primary me-2 mb-4" tabindex="0">
                                        <span class="d-none d-sm-block">إدراج صورة</span>
                                        <i class="bx bx-upload d-sm-none d-block"></i>
                                        <input type="file"
                                               id="upload"
                                               class="account-file-input"
                                               hidden
                                               accept="image/png, image/jpeg" />
                                    </label>
                                    <button type="button" class="btn btn-label-secondary account-image-reset mb-4">
                                        <i class="bx bx-reset d-sm-none d-block"></i>
                                        <span class="d-none d-sm-block">حذف</span>
                                    </button>


                                </div>
                            </div>
                        </div>
                        <hr class="my-0" />
                        <div class="card-body">
                            <form asp-action="Edit" asp-controller="ManageUsers" >
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="firstName" class="form-label">الاسم الاول</label>
                                        <input asp-for="FullName"  class="form-control"  placeholder="ادخل اسمك الاول" autofocus />
                                    </div>
                               
                                    <div class="col-md-6 mb-3">
                                        <label for="lastName" class="form-label">رقم الهاتف</label>
                                        <span class="input-group-text">YE (+967)</span>
                                        <input asp-for="PhoneNumber"  placeholder="ادخل رقم الهاتف  " autofocus />>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="email" class="form-label">الرقم الوطني</label>
                                        <input asp-for="IdentityNumber" type="number" class="form-control"  placeholder="ادخل رقم البطاقة " autofocus />
                                    </div>
                      
                            
                                    @*<div class="col-md-6 mb-3">
                                            <label for="address" class="form-label">الفعالية</label>
                                            <input type="text" class="form-control" id="address" name="address"  />
                                        </div>*@

                                    <div class="col-md-6 mb-3">
                                        <label for="zipCode" class="form-label"> تاريخ الانضمام </label>
                                        <input asp-for="DateOfBirth" class="form-control datepicker" />
                                    </div>

                                </div>
                                <div class="mt-2">
                                    <button type="submit" class="btn btn-primary me-2">حفظ التغير</button>
                                    <button type="reset" asp-action="Index" class="btn btn-label-secondary">إلغاء</button>
                                </div>
                            </form>
                        </div>
                        <!-- /Account -->
                    </div>

                </div>
            </div>
        </div>
        <!-- / Content -->

        <div class="content-backdrop fade"></div>
    </div>
