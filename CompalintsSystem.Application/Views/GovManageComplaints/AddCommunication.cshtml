@model AddCommunicationVM
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="breadcrumb-wrapper py-3 mb-4">
            <span class="text-muted fw-light">البلاغات /</span> تقديم بلاغ على موظف
        </h4>

        <div class="row">
            <div class="col-md-12">
                <ul class="nav nav-pills flex-column flex-md-row mb-3">
                </ul>
                <div class="card mb-4">
                    <h5 class="card-header">تقديم بلاغ على موظف </h5>
                    <!-- Account -->
                    <div class="card-body">
                        <div class="gap-4 d-flex align-items-start align-items-sm-center">

                            <div class="button-wrapper">


                            </div>
                        </div>
                    </div>
                    <hr class="my-0" />
                    <div class="card-body">
                        <form asp-action="AddCommunication" method="POST" >
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="firstName" class="form-label">عنوان البلاغ</label>
                                    <input asp-for="Titile" class="form-control" type="text"  />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="lastName" class="form-label">محتوى البلاغ </label>
                                    <input asp-for="reason" class="form-control" type="text"  />
                                </div>


                                <div class="col-md-6 mb-3">
                                    <label class="form-label"> الموضف</label>

                                    <select asp-for="NameUserId" asp-items="ViewBag.UsersName   " class="form-control form-control-chosen" data-placeholder="Please select...">
                                    </select>
                                    <span asp-validation-for="NameUserId" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label" for="country">نوع البلاغ</label>
                                    <select asp-for="TypeCommuncationId" asp-items="ViewBag.typeCommun"   
                                            class="select2 form-select select2-hidden-accessible"
                                                tabindex="-1" aria-hidden="true" data-select2-id="10">
                                    </select>
                                    <span asp-validation-for="TypeCommuncationId" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="mt-2">
                                <button type="submit" class="btn btn-success  btn-primary" id="type-success">
                                    إضافة
                                    البلاغ
                                </button>

                                <button type="reset" class="btn btn-label-secondary">إلغاء</button>
                            </div>
                        </form>
                    </div>




                    <div class="content-backdrop fade"></div>
                </div>
                <!-- Content wrapper -->
            </div>
            <!-- / Layout page -->
        </div>

        <!-- Overlay -->
        <div class="layout-overlay layout-menu-toggle"></div>

        <!-- Drag Target Area To SlideIn Menu On Small Screens -->
        <div class="drag-target"></div>
    </div>
    </div>
    <!-- / Layout wrapper -->
    <!-- Core JS -->
    @section Scripts{
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
