


<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="breadcrumb-wrapper py-3 mb-4">
            <span class="text-muted fw-light">الاقتراحات    /</span> تقديم الاقتراح
        </h4>

        <div class="row">
            <div class="col-md-12">
                <ul class="nav nav-pills flex-column flex-md-row mb-3">
                </ul>
                <div class="card mb-4">
                    <h5 class="card-header">تقديم الاقتراح  </h5>
                    <!-- Account -->
                    <div class="card-body">
                        <div class="gap-4 d-flex align-items-start align-items-sm-center">

                            <div class="button-wrapper">


                            </div>
                        </div>
                    </div>
                    <hr class="my-0" />
                    <div class="card-body">
                        <form id="formAccountSettings" method="POST" onsubmit="return false">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="firstName" class="form-label">عنوان الاقتراح</label>
                                    <input class="form-control"
                                           type="text"
                                           id="firstName"
                                           name="الاسم"
                                           value="عنوان الاقتراح"
                                           autofocus />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="lastName" class="form-label">محتوى الاقتراح</label>
                                    <input class="form-control" type="text" name="lastName" id="lastName" value="محتوى الاقتراح " />
                                </div>





                                <div class="col-md-6 mb-3">
                                    <label for="email" class="form-label">الرقم الوطني</label>
                                    <input class="form-control"
                                           type="text"
                                           id="email"
                                           name="الرقم الوطني"
                                           value="548452215552 "
                                           placeholder="john.doe@example.com" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="currency" class="form-label">البطاقة الشخصية</label>
                                    <input class="form-control" type="file" id="formFile">
                                </div>

                            </div>
                            <div class="mt-2">
                                <button type="submit" class="btn btn-primary me-2">إضافة الاقتراح </button>
                                <button type="reset" class="btn btn-label-secondary">إلغاء</button>
                            </div>
                        </form>
                    </div>

                    <div class="content-backdrop fade"></div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}