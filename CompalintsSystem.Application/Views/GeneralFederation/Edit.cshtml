<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="breadcrumb-wrapper py-3 mb-4">
            <span class="text-muted fw-light">الملف الشخصي  /</span> الحساب
        </h4>

        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <h5 class="card-header">مدراء المحافظة</h5>
                    <!-- Account -->
                    <form asp-action="Edit" asp-controller="GeneralFederation" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="gap-4 d-flex align-items-start align-items-sm-center " style="margin-right:20px">

                            <img class="img-fluid rounded my-4"
                                 src="/images/@Model.ProfilePicture"
                                 alt="خلفية المستخدم"
                                 max-height="110"
                                 width="110"
                                 id="imgPreview" />

                            <div class="button-wrapper">

                                <label asp-for="ProfilePicture" class="btn btn-primary me-2 mb-4" for="customFile" tabindex="0">
                                    <span class="d-none d-sm-block">إدراج صورة</span>
                                    <i class="bx bx-upload d-sm-none d-block"></i>
                                   
                                <input type="file" asp-for="ProfilePicture" onchange="previewImg(event)" class="custom-file-input"
                                       accept="image/png, image/jpeg, image/jpg" />
                                </label>
                            </div>
                        </div>
                        <hr class="my-0" />
                        <div class="card-body">


                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="FullName" class="form-label">الاسم </label>
                                    <input asp-for="FullName" class="form-control" placeholder="ادخل اسمك كاملا" autofocus />
                                    <span asp-validation-for="FullName" class="text-danger"></span>

                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="PhoneNumber">رقم الهاتف</label>

                                    <input asp-for="PhoneNumber" class="form-control" placeholder="ادخل رقم الهاتف  " />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="PhoneNumber"> تاريخ الميلاد</label>

                                    <input asp-for="DateOfBirth" class="form-control" type="datetime" />
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="IdentityNumber">الرقم الوطني</label>
                                    <input asp-for="IdentityNumber" class="form-control" placeholder="ادخل رقم البطاقة " />
                                    <span asp-validation-for="IdentityNumber" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="IsBlocked" />
                                        <label asp-for="IsBlocked" class="form-label">الحالة (تنشيط /توقيف)</label>

                                    </label>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="RoleId" class="control-label"></label>
                                    @if (User.IsInRole("AdminGeneralFederation"))
                                    {
                                        <select asp-for="RoleId" class="form-control" asp-items="@(new SelectList(new List<SelectListItem>
                                      {   new SelectListItem { Selected = true, Text = "قم بإختيار الصلاحية الممنوحة",Value =""},
                                          new SelectListItem { Selected = false, Text = "مدير إتحاد عام", Value = 1.ToString() },
                                          new SelectListItem { Selected = false, Text = " مدير محافظة", Value = 2.ToString() },
                                          new SelectListItem { Selected = false, Text = " مدير مديرية", Value = 3.ToString() },
                                          new SelectListItem { Selected = false, Text = " مدير عزلة", Value = 4.ToString() },
                                          new SelectListItem { Selected = false, Text = " مزارع ", Value = 5.ToString() } } , "Value", "Text", 5))"> </select>

                                    }
                                    else if (User.IsInRole("AdminGovernorate"))
                                    {

                                        <select asp-for="RoleId" class="form-control" asp-items="@(new SelectList(new List<SelectListItem>
                                      {   new SelectListItem { Selected = true, Text = "قم بإختيار الصلاحية الممنوحة"},

                                          new SelectListItem { Selected = false, Text = " مدير مديرية", Value = 3.ToString() },
                                          new SelectListItem { Selected = false, Text = " مدير عزلة", Value = 4.ToString() },
                                          new SelectListItem { Selected = false, Text = " مزارع ", Value = 5.ToString() } } , "Value", "Text", 5))"> </select>



                                    }
                                    else if (User.IsInRole("AdminDirectorate"))
                                    {

                                        <select asp-for="RoleId" class="form-control" asp-items="@(new SelectList(new List<SelectListItem>
                                      {   new SelectListItem { Selected = true, Text = "قم بإختيار الصلاحية الممنوحة"},

                                           new SelectListItem { Selected = false, Text = " مدير عزلة", Value = 4.ToString() },
                                          new SelectListItem { Selected = false, Text = " مزارع ", Value = 5.ToString() } } , "Value", "Text", 5))"> </select>


                                    }
                                    else if (User.IsInRole("AdminSubDirectorate"))
                                    {
                                        <select asp-for="RoleId" class="form-control" asp-items="@(new SelectList(new List<SelectListItem>
                                      {   new SelectListItem { Selected = true, Text = "قم بإختيار الصلاحية الممنوحة",Value =""},


                                          new SelectListItem { Selected = false, Text = " مزارع ", Value = 5.ToString() } } , "Value", "Text", 5))"> </select>

                                    }
                                    <span asp-validation-for="RoleId" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <label class="col-form-label">المحافظة</label>
                                    <select id="governorateId" class="form-control" asp-for="GovernorateId" asp-items="@(new SelectList(ViewBag.ViewGover,"Id","Name"))">
                                        <option value="">حدد المحافظة</option>

                                    </select>
                                    <span asp-validation-for="GovernorateId" class="text-danger"></span>

                                </div>
                                <div class="col-md-4 mb-4">
                                    <label class="col-form-label ">المديرية</label>
                                    <select id="directorateId" class="form-control " asp-for="DirectorateId" asp-items="@(new SelectList(String.Empty,"Id","Name"))">

                                        <option value="@Model.DirectorateId">@Model.DirectorateName </option>
                                    </select>
                                    <span asp-validation-for="DirectorateId" class="text-danger"></span>

                                </div>
                                <div class="col-md-4 mb-4">
                                    <label class="col-form-label">العزل</label>
                                    <select id="subDirectorate" class="form-control" asp-for="SubDirectorateId" asp-items="@(new SelectList(String.Empty,"Id","Name"))">
                                        <option value="@Model.SubDirectorateId"> @Model.SubDirectorateName</option>
                                    </select>
                                    <span asp-validation-for="SubDirectorateId" class="text-danger"></span>

                                </div>
                                <div class="mt-2">
                                    <button type="submit" id="editButton" class="btn btn-success me-2">حفظ التغير</button>
                                    <button type="reset" onclick="location.href='@Url.Action("ViewUsers", "GeneralFederation")'" class="btn btn-label-secondary">إلغاء</button>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
            <!-- /Account -->
        </div>

    </div>
</div>

<!-- / Content -->

<div class="content-backdrop fade"></div>

@section Scripts {

    @*@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}*@
    <partial name="_ValidationScriptsPartial" />
    <script>
        'use strict';
        (function () {
            const editButton = document.querySelector('#editButton');
            // Alert With Functional Confirm Cancel Button
            if (editButton) {
                editButton.onclick = function () {
                    var inputData = $('form').serializeArray();
                    $.ajax(
                        {
                            type: "POST", //HTTP POST Method
                            url: "/GeneralFederation/Edit", // Controller/View
                            data: inputData,
                            error: function () {
                                Swal.fire({
                                    title: 'خطأ!',
                                    text: ' يرجى ادخال بيانات المستخدم بشكل كامل!',
                                    icon: 'error',
                                    customClass: {
                                        confirmButton: 'btn btn-primary'
                                    },
                                    buttonsStyling: false
                                });
                                // Error Alert

                            },
                        });
                    Swal.fire({

                        title: 'هل انت متأكد من حفظ المستخدم؟',
                        text: "لن تتمكن من العوده الى المستخدم !",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonText: 'نعم, حفظ !',
                        CancelButtonText: 'إلغاء',
                        customClass: {
                            confirmButton: 'btn btn-primary me-3',
                            cancelButton: 'btn btn-label-secondary'
                        },
                        buttonsStyling: false
                    }).then(function (result) {
                        if (result.value) {
                            Swal.fire({
                                type: "POST", //HTTP POST Method
                                url: "/GeneralFederation/ViewUsers", // Controller/View
                                icon: 'success',
                                title: 'تم الحفظ بنجاح !',
                                text: 'تم الحفظ في  جدول المستخدمين.   ',
                                customClass: {
                                    confirmButton: 'btn btn-success',

                                },



                            });

                        } else if (result.dismiss === Swal.DismissReason.cancel) {
                            Swal.fire({
                                title: 'الغاء الحفظ',
                                text: 'لا زال المستخدم قيد التعديل :)',
                                icon: 'error',
                                customClass: {
                                    confirmButton: 'btn btn-success'
                                }
                            });
                        }
                    });
                };
            }
        })();
    </script>

    <script>



  $(document).ready(function () {
    // إزالة خاصية disabled من العنصر الأول في القائمة المنسدلة
    $("#governorateId option:first").prop("disabled", false);

    $("#governorateId").change(function () {
        var selectedGovernorate = $(this).val();
        if (selectedGovernorate === "") {
            $("#directorateId").prop("disabled", true).val("");
            $("#subDirectorate").prop("disabled", true).val("");
        } else {
            $("#directorateId").prop("disabled", false);
            $.ajax({
                url: "/ManageUsers/GetDirectoratesByGovernorateId",
                method: "GET",
                data: { governorateId: selectedGovernorate },
                success: function (response) {
                    $("#directorateId").empty();
                    $("#directorateId").append('<option value="">اختر المديرية</option>');
                    response.forEach(function (director) {
                        $("#directorateId").append('<option value="' + director.id + '">' + director.name + '</option>');
                    });
                    // تحميل القيمة المحددة في حالة التعديل
                    var directorateIdModel = '@Model.DirectorateId';
                    if (directorateIdModel !== '') {
                        $('#directorateId').val(directorateIdModel);
                        $('#directorateId').trigger('change');
                    }
                },
                error: function () {
                    console.log("فشل في استرداد المديريات.");
                }
            });
        }
    });

    $("#directorateId").change(function () {
        var selectedDirectorate = $(this).val();
        if (selectedDirectorate === "") {
            $("#subDirectorate").prop("disabled", true).val("");
        } else {
            $("#subDirectorate").prop("disabled", false);
            $.ajax({
                url: "/ManageUsers/GetSubDirectoratesByDirectorateId",
                method: "GET",
                data: { directorateId: selectedDirectorate },
                success: function (response) {
                    $("#subDirectorate").empty();
                    $("#subDirectorate").append('<option value="">اختر العزلة</option>');
                    response.forEach(function (subDirectorate) {
                        $("#subDirectorate").append('<option value="' + subDirectorate.id + '">' + subDirectorate.name + '</option>');
                    });
                    // تحميل القيمة المحددة في حالة التعديل
                    var subDirectorateIdModel = '@Model.SubDirectorateId';
                    if (subDirectorateIdModel !== '') {
                        $('#subDirectorate').val(subDirectorateIdModel);
                    }
                },
                error: function () {
                    console.log("فشل في استرداد العزلات.");
                }
            });
        }
    });
});


    </script>


