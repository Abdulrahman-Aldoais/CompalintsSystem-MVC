@model EditUserViewModel
@if (!ViewContext.ModelState.IsValid)
{
    <div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger"></div>
}
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="breadcrumb-wrapper py-3 mb-4">
            <span class="text-muted fw-light">الملف الشخصي  /</span> الحساب
        </h4>

        <div class="row">
            <div class="col-md-12">

                <div class="card mb-4">
                    <h5 class="card-header"> تعديل البيانات</h5>
                    <!-- Account -->
                
                    <hr class="my-0" />
                    <div class="card-body">
                        <form asp-action="Edit" asp-controller="AdminGeneralUser">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="firstName" class="form-label"> الاسم</label>
                                    <input asp-for="FullName" class="form-control" placeholder="ادخل اسمك الاول" autofocus />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="firstName" class="form-label">الاسم الاخير </label>
                                    <input asp-for="FullName" class="form-control" placeholder="ادخل بقية الاسم " autofocus />
                                </div>
                             
                                <div class="col-md-6 mb-3">
                                    <label class="form-label" >رقم الهاتف</label>
                                    
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">الرقم الوطني</label>
                                    <input asp-for="IdentityNumber" class="form-control" placeholder="ادخل رقم البطاقة "  />
                                    <span asp-validation-for="IdentityNumber" class="text-danger"></span>

                                </div>

                                <div class="form-group form-password-toggle">
                                    <label asp-for="RoleId" class="control-label"></label>
                                    <select asp-for="RoleId" class="form-control" asp-items="@(new SelectList(new List<SelectListItem> { new SelectListItem { Selected = true, Text = "مدير إتحاد عام", Value = 1.ToString() }, new SelectListItem { Selected = false, Text = " مدير محافظة", Value = 2.ToString() } , new SelectListItem { Selected = false, Text = " مدير مديرية", Value = 2.ToString() }},"Value","Text",2))"> </select>
                                    <span asp-validation-for="RoleId" class="text-danger"></span>
                                </div>
                                <br>
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="IsBlocked" /> <label for="username" class="form-label">الحالة (تفعيل /تعطيل)</label>

                                    </label>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label  class="form-label"> تاريخ الانضمام </label>
                                    <input asp-for="DateOfBirth" type="datetime-local" class="form-control datepicker" />
                                </div>

                            </div>
                            <div class="mt-2">
                                <button type="submit" class="btn btn-primary me-2">حفظ التغير</button>
                                <button type="reset" asp-action="Index" class="btn btn-label-secondary">إلغاء</button>
                            </div>
                        </form>
                    </div>
                    <!-- /Account -->
                </div>

            </div>
        </div>
    </div>
    <!-- / Content -->

    <div class="content-backdrop fade"></div>
</div>
